<Page
    x:Class="MVVM.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >

    <StackPanel Orientation="Vertical">
        <Button x:Name="Btn" Content="NewPage" Margin="10" Command="{x:Bind MainViewModel.NewPageCommand}" />
        <Button x:Name="Dialog" Content="Dialog" Margin="10" Command="{x:Bind MainViewModel.ShowDialogCommand}" />
        <TextBlock x:Name="TextDialog"  Margin="5" Width="Auto" Text="Dialog result"/>
    </StackPanel>
</Page>
